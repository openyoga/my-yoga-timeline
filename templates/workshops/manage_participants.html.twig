{% extends 'base.html.twig' %}

{% block title %}<a href="/workshops/{{ workshop.id }}/edit/{{ backToRoute }}">Edit Workshop #{{ workshop.id }}</a> - Manage Participants{% endblock %}

{% block body %}
<h2>{{ workshop.yogaStyle.name }}</h2>
<p>
  {{ workshop.plannedDate|localizeddate('long', 'short')}} - {{ workshop.plannedDate|date('l') }}, {{ workshop.duration}} minutes<br>
  {{ workshop.location.name}}{% if workshop.location.street %}, {{ workshop.location.street }}{% endif %},{% if workshop.location.zipCode %} {{ workshop.location.zipCode }}{% endif %} {{ workshop.location.city }}<br>
  <strong>Inspiration: </strong>{% if workshop.inspiration is not null %}{{ workshop.inspiration.author }} | {{ workshop.inspiration.title }} | {{ workshop.inspiration.reference }}{% endif %}<br>
  {% if workshop.comments %}<strong>Comments: </strong>{{ workshop.comments }}{% endif %}
</p>

<h2>Participants</h2>

<ul>
{% for participant in participants %}
  <li>
    <a href="/workshops/{{ workshop.id }}/remove_participant/{{ participant.id }}/{{ backToRoute }}">remove</a>
    {% if participant.academic_title %}{{ participant.academic_title }}{% endif %}
    {{ participant.first_name}}
    {% if participant.last_name %}{{ participant.last_name }}{% endif %},
    <a href="/workshops/{{ workshop.id }}/toggle_payed_status/{{ participant.id }}/{{ backToRoute }}">{% if participant.fee_payed_yn == 'N' %}<span class="text-danger">NOT</span> {% endif %}payed</a>, 
    <a href="/workshops/{{ workshop.id }}/toggle_attending_status/{{ participant.id }}/{{ backToRoute }}">{% if participant.attending_yn == 'N' %}<span class="text-danger">NOT</span> {% endif %}attending</a>
  </li>
{% endfor %}
</ul>

<h2>Available Participants</h2>

<ul>
{% for participant in availableAarticipants %}
  <li>
    <a href="/workshops/{{ workshop.id }}/add_participant/{{ participant.id }}/{{ backToRoute }}">add</a>
    {% if participant.academic_title %}{{ participant.academic_title }}{% endif %}
    {{ participant.first_name}}
    {% if participant.last_name %}{{ participant.last_name }}{% endif %}
  </li>
{% endfor %}
</ul>

{% endblock %}
